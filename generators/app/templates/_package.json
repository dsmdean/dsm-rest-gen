{
  "name": "<%= slug %>",
  "version": "0.0.0",
  "main": "<%= srcDir %>",
  "private": true,
  "scripts": {
    "start": "nodemon --exec babel-node ./<%= srcDir %>/bin/www",
    "lint": "eslint <%= srcDir %>",
    "docs": "apidoc -i <%= srcDir %> -o docs && apidoc-markdown -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html"
  },
  "dependencies": {
    <%_ if (generateUserApi) { _%>
    "@sendgrid/mail": "^6.3.1",
    <%_ } _%>
    "apidoc": "^0.17.7",
    "apidoc-markdown": "^0.2.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.1.0",
    "express": "~4.16.0",
    "express-cors": "0.0.3",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.6",
    "morgan": "~1.9.0"<%_ if (generateUserApi) { _%>,
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1"
    <%_ } _%>
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "nodemon": "^1.18.4",
    "opn-cli": "^4.0.0"
  }
}
